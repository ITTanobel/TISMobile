<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header"
                android:layout_marginBottom="5dp"
                android:background="#dcdcdc"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtplant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plant"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtordertipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Order"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipe"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtbayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pembayaran"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtcostctr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cost Center"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttglinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Input"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttgldoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Dokumen"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttglbutuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Dibutuhkan"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttglpost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Posting"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtinputby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Input Oleh"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txteditby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edit Oleh"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txttgledit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Edit"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtapv1by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approve 1 Oleh"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtapv2by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approve 2 Oleh"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtkeperluan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keperluan"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
