<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="48dp"
    android:paddingLeft="10dp">

    <com.github.johnkil.print.PrintView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        app:iconColor="@color/text_gray"
        app:iconFont="fonts/material-icon-font.ttf"
        app:iconSize="25dp"
        app:iconText="@string/ic_keyboard_arrow_right" />

    <com.github.johnkil.print.PrintView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/arrow_icon"
        app:iconColor="@color/text_gray"
        app:iconFont="fonts/material-icon-font.ttf"
        app:iconSize="25dp" />

    <TextView
        android:id="@+id/node_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tglso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/node_value"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buttonsContainer"
        android:layout_toRightOf="@+id/icon"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/ketso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tglso"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buttonsContainer"
        android:layout_toRightOf="@+id/icon"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/statusso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ketso"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buttonsContainer"
        android:layout_toRightOf="@+id/icon"
        android:textSize="10sp" />

 </RelativeLayout>
