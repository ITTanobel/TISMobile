<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Search Option"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:text="Plant"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnplant_so_view"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColorLink="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txttipe_so_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:visibility="gone"
                android:text="Tipe Dokument"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spntipe_so_view"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:visibility="gone"
                android:textColorLink="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/rdodocno_so_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Dokument"/>


            <EditText
                android:id="@+id/txtdocno1_so_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColorLink="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtsd1_so_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/D"
                android:layout_marginLeft="115dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginStart="115dp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/txtdocno2_so_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColorLink="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/rdotgl_so_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tanggal Input"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txttgl1_so_view"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="15dp"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btntgl1_so_view"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:src="@drawable/ic_date"
                    android:layout_gravity="right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtsd2_so_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/D"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txttgl2_so_view"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="15dp"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColorLink="@android:color/darker_gray" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btntgl2_so_view"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:src="@drawable/ic_date"
                    android:layout_gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>